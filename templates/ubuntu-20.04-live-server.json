{
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": "true",

      "memory": 1024,
      "name": "ubuntu-20.04-live-server",
      "iso_urls": [
        "iso/ubuntu-20.04.4-live-server-amd64.iso",
        "https://releases.ubuntu.com/focal/ubuntu-20.04.4-live-server-amd64.iso"
      ],
      "iso_checksum": "sha256:28ccdb56450e643bad03bb7bcf7507ce3d8d90e8bf09e38f6bd9ac298a98eaad",

      "http_directory": "http",
      "output_directory": "output",

      "boot_wait": "5s",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-20.04-live-server/",
        "<enter><wait>"
      ],
      "shutdown_command": "shutdown -P now",

      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_handshake_attempts": "20"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["ls /"]
    }
  ]
}
